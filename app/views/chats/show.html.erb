        <div class="chat">
<div class="container">
    <div class="row">
      <div class="col-lg-12">
<table>
    <thead>
        <tr>
        </tr>
    </thead>
    <tbody>

    <% @chats.each do |chat| %>
      <% if chat.user_id == current_user.id %>
      <div class="current_user">
      <strong class="current_user"><%= chat.message %></strong>
      <%= link_to user_path(current_user.id) do %>
      <small class="current_user"><%= chat.user.name %>さん</small>
      <%= attachment_image_tag @current_user, :profile_image, class: "img-thumbnail", fallback: "no-image.jpg", size: "60x60", class:"mt-3 rounded-circle"; %>
      <% end %>
    </div>
     <% else %>
      <div class="visited_user">
        <%= link_to user_path(@user.id) do %>
         <%= attachment_image_tag @user, :profile_image, class: "img-thumbnail", fallback: "no-image.jpg", size: "60x60", class:"mt-3 rounded-circle";  %>
        <small class="visited_user"><%= chat.user.name %>さん</small>
        <% end %>
        <strong class="visited_user"><%= chat.message %></strong>
      </div>
    <% end %>
  <% end %>
    </tbody>
  </table>
 </div>
</div>
</div>

 <div class="chat-form">
<%= form_with model: @chat do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id %>
   <%= f.submit "送信する", class: "far fa-comment-dots btn btn-success" %>
<% end %>
</div>
</div>
