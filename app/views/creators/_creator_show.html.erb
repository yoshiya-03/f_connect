<table class='table'>
    <thead>
      <tr class="color-black">
        <th>ユーザーネーム</th>
        <th>自己紹介</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, class: "img-thumbnail", fallback: "no-image.jpg", size: "100x100", class:"mt-3 rounded-circle";  %>
          <%= user.name %></td>

          <td><%= user.introduction %></td>

          <td><%= link_to 'Show', user_path(user.id), class: "user_#{user.id}", class: "btn btn-outline-dark" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>