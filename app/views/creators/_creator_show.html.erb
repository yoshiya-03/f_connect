<table class='table'>
      <thead>
        <tr class="color-black">
          <th>name</th>
          <th>introduction</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, class: "img-thumbnail", fallback: "no-image.jpg", size: "100x100" %>
            <%= user.name %></td>

            <td><%= user.introduction %></td>

            <td><%= link_to 'Show', user_path(user.id), class: "user_#{user.id}", class: "btn btn-dark" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>