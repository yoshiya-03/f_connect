<div class='col-md-10 offset-md-1'>
  <h2>hairmake</h2>
    <table class='table'>
      <thead>
        <tr>
          <th>name</th>
          <th>introduction</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image_id, class: "img-thumbnail", fallback: "no-image.jpg", size: "100x100" %></td>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
            <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>