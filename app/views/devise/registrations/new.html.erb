<div class="container">
  <div class="row">
    <div class="col-lg-12">
<h4>新規会員登録</h4>
<!--<= render "devise/shared/error_messages", resource: resource %>-->
<ul>
<% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <table>
    <tbody>
      <tr class="form-group">
        <td><%= f.label :名前 %></td>
        <td></td>
        <td><%= f.text_field :name, autofocus: true, class: "form-control" %></td>
        <td></td>
        <td></td>
      </tr>

      <tr class="form-group">
        <td><%= f.label :email, "メール" %></td>
        <td></td>
        <td><%= f.email_field :email, autocomplete: "email", placeholder: "name@example.com", class: "form-control" %></td>
        <td></td>
        <td></td>
      </tr>

      <tr class="form-group">
        <td><%= f.label :phone_number, "電話番号" %></td>
        <td></td>
        <td><%= f.text_field :phone_number, placeholder: "00012345678", class: "form-control" %></td>
        <td></td>
        <td></td>
      </tr>

       <tr class="form-group">
         <td><%= f.label "活動拠点" %></td>
         <td></td>
         <td><%= f.select :based_in, User.based_ins.keys, {}, class: "form-control" %></td>
        <td></td>
        <td></td>
      </tr>

       <tr class="form-group">
        <td><%= f.label :job_category, "職種" %></td>
        <td></td>
        <td><%= f.select :job_category_id, JobCategory.job_categories.keys,{}, class:"form-control" %></th></td></td>
        <td></td>
        <td></td>
      </tr>

      <tr class="form-group">
        <td><%= f.label :password, "パスワード" %></td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr class="form-group">
        <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= f.submit "新規登録", class: "btn btn-success btn-block" %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>
<% end %>
<h4>すでに登録済みの方</h4>
<P><%= link_to "こちら", new_user_session_path %>　からログインしてください。</P>
</div>
</div>
</div>